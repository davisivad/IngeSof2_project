<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fpuna.myfirstapp.CargarDatos">

    <RelativeLayout
        android:id="@+id/section_datos"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp">>

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="226dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.79"
            tools:layout_editor_absoluteY="10dp"
            tools:layout_editor_absoluteX="30dp"
            android:id="@+id/linearLayout">


            <EditText
                android:id="@+id/text_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:ems="10"
                android:inputType="textPersonName"
                android:layoutDirection="inherit"
                android:selectAllOnFocus="false"
                android:text="Id" />

            <EditText
                android:id="@+id/ET_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ET_Date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Date"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ET_Sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Sex"
                android:textSize="20dp" />
        </LinearLayout>
        <Button
            android:id="@+id/button_add"
            android:onClick="GuardarDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:drawable/title_bar"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:layout_editor_absoluteY="258dp"
            tools:layout_editor_absoluteX="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button_show"
            android:onClick="MostrarDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/title_bar"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Show"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="258dp"
            android:layout_alignBaseline="@+id/button_add"
            android:layout_alignBottom="@+id/button_add"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_finish"
            android:onClick="Terminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:drawable/title_bar"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:layout_editor_absoluteY="258dp"
            tools:layout_editor_absoluteX="214dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignBaseline="@+id/button_show"
            android:layout_alignBottom="@+id/button_show"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
